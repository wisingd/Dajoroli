<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical" >

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="@android:color/transparent"
        android:contentDescription="@string/desc_date"
        android:onClick="showDatePickerDialog"
        android:scaleType="centerInside"
        android:scaleX="0.50"
        android:scaleY="0.50"
        android:src="@drawable/event_date" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="@android:color/transparent"
        android:contentDescription="@string/desc_create"
        android:onClick="eventNameDialog"
        android:scaleType="centerInside"
        android:scaleX="0.50"
        android:scaleY="0.50"
        android:src="@drawable/event_create" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/desc_prettyline"
        android:scaleType="centerInside"
        android:src="@drawable/icon_line" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="@android:color/transparent"
        android:contentDescription="@string/desc_showevents"
        android:onClick="showEvents"
        android:scaleType="centerInside"
        android:scaleX="0.50"
        android:scaleY="0.50"
        android:src="@drawable/event_show" />

</LinearLayout>